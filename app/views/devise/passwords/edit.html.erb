<label class="I18n-dropdown d-flex flex-column">
  <input type="checkbox" class="checkbox">
    <ul class="I18n-dropdown-menu">
      <li><%= link_to 'English', root_path(locale: :en), class: "dropdown-item" %></li>
      <li><%= link_to 'Русский', root_path(locale: :ru), class: "dropdown-item" %></li>
    </ul>
    <img src="https://static.vecteezy.com/system/resources/previews/001/198/064/non_2x/earth-png.png">
</label>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'card card-form' }) do |f| %>
  <h2> <%= t 'nikita.change_pass' %></h2>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field form-group">
    <%= f.label "#{ t 'nikita.new_pass' }" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t 'nikita.char_min' %>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <%= f.label "#{ t 'nikita.confirm_new_pass' }" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions field form-group">
    <%= f.submit "#{ t 'nikita.change_pass' }", class: 'btn btn-outline-success' %>
  </div>
<% end %>
