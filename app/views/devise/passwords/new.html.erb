
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'card card-form' }) do |f| %>
  <h2>Forgot your password?</h2>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions field form-group">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-outline-success' %>
  </div>
<% end %>
