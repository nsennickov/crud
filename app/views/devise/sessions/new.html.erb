<label class="I18n-dropdown d-flex flex-column">
  <input type="checkbox" class="checkbox">
    <ul class="I18n-dropdown-menu">
      <li><%= link_to 'English', root_path(locale: :en), class: "dropdown-item" %></li>
      <li><%= link_to 'Русский', root_path(locale: :ru), class: "dropdown-item" %></li>
    </ul>
    <img src="https://static.vecteezy.com/system/resources/previews/001/198/064/non_2x/earth-png.png">
</label>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'card card-form' }) do |f| %>
  <h2><%= t 'devise.failure.unauthenticated' %></h2>

  <div class="field form-group">
    <%= f.label "#{ t 'nikita.email_label_form' }" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.label "#{ t 'nikita.pass_label_form' }" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label "#{ t 'nikita.remember_me_btn' }" %>
    </div>
  <% end %>

  <div class="actions form-group">
    <%= f.submit "#{ t 'buttons.login' }", class: 'btn btn-success' %>
  </div>

  <div class="field d-flex w-100 justify-content-around form-group">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
