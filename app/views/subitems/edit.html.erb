<div class="card">
  <h1><%= t 'pages.subitem.edit.title' %></h1>

  <div class="add-todo-wrapper d-flex flex-row justify-content-center">
    <%= form_for :subitems, url: item_subitem_path, method: :patch do |t|%>
      <%= t.text_field :title %>
      <%= t.submit value="#{ t 'pages.subitem.edit.button' }", class: "btn btn-success add-todo"%>
    <% end %>
  </div>

  <div class="todo-list-wrapper">
    <h2 class="todo-item">
  	  <%= @subitem.title%>
    </h2>
  </div>

</div>
